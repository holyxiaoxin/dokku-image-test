<p id="notice"><%= notice %></p>

<h1>Low Scores</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @low_scores.each do |low_score| %>
      <tr>
        <td><%= low_score.game %></td>
        <td><%= low_score.score %></td>
        <td><%= link_to 'Show', low_score %></td>
        <td><%= link_to 'Edit', edit_low_score_path(low_score) %></td>
        <td><%= link_to 'Destroy', low_score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Low Score', new_low_score_path %>
